@import "./variable.styl"

border-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &::after
    display none

bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url + "@3x.png")

page-base()
  position relative
  width 100%
  height 100%
  padding 20px
  .header
    display flex
    justify-content space-between
  .table-list
    margin-top 20px

layout-absolute()
  position: absolute
  top 0
  left 0
  width 100%
  min-height 100%
  padding 20px
  background $white
  z-index 3
  overflow-y auto
