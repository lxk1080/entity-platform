@import "./variable.styl"

border-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &::after
    display none

bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url + "@3x.png")

page-base()
  position relative
  width 100%
  height 100%
  padding 20px
  /*@media only screen and (min-width: 1600px)
    width 1200px
    margin 20px auto*/
  .header
    display flex
    justify-content space-between
  .table-list
    margin-top 20px

layout-absolute()
  position: absolute
  top 0
  left 0
  width 100%
  min-height 100%
  padding 20px
  background $white
  z-index 3

card-style()
  .card
    margin-bottom 10px
    .card-title
      .title-text
        font-size 18px
        font-weight 600
    .card-content
      .content-row
        display flex
        margin-bottom 20px
        .row-item
          margin-right 30px
          .textarea
            vertical-align text-top
          .ivu-cascader
            display inline-block
          .ivu-upload-list
            margin-top 0
